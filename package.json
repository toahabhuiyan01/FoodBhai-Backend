{
  "name": "@foodbhai/backend",
  "version": "1.0.0",
  "main": "build/api/serve-api.js",
  "scripts": {
    "gen:client": "npx openapicmd typegen ./openapi.yaml > src/types/openapi-client.ts",
    "type:gen": "npx openapi-typescript ./openapi.yaml -o src/types/openapi.ts --root-types",
    "types:clean": "npx ts-node src/types/generator-util.ts",
    "gen:types": "npm run type:gen && npm run gen:client && npm run types:clean ",
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "postinstall": "npm run build",
    "build": "tsc",
    "watch-build": "tsc -w",
    "start": "node .build/api/serve-api.js",
    "watch-start": "nodemon --delay 2 -w build/ -x 'npm run start'",
    "dev": "concurrently -k -p '[{name}]' -n 'typescript,api' -c 'yellow.bold,cyan.bold' npm:watch-build npm:watch-start",
    "gen-mig": "ts-node ./node_modules/typeorm/cli.js migration:generate -d src/data-source.ts",
    "run-mig": "ts-node ./node_modules/typeorm/cli.js migration:run -d src/data-source.ts",
    "creat-mig": "typeorm migration:create"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "chance": "^1.1.12",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "mailtrap": "^3.4.0",
    "nodemon": "^3.1.7",
    "openapi-backend": "^5.11.0",
    "openapi-client-axios": "^7.5.5",
    "openapicmd": "^2.6.1",
    "pg": "^8.13.0",
    "pino": "^9.4.0",
    "reflect-metadata": "^0.2.2",
    "sib-api-v3-sdk": "^8.5.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@toaha/eslint-config": "github:toahabhuiyan01/eslint-config-ts",
    "@types/bcryptjs": "^2.4.6",
    "@types/chance": "^1.1.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "eslint": "^9.11.0",
    "globals": "^15.9.0",
    "openapi-typescript": "^7.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  }
}
